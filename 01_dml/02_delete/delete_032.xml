<SQLTEST>
	<CONTENT> 测试DELETE把表中的数据全部删除 </CONTENT><!-- 请在这里加入对脚本的简要描述 -->
	<CONNECT></CONNECT><!-- 连接数据库 -->
	<SQL_CASE>
		<SQL> CREATE TABLE DML_20010_TABLE(C0 INT, C1 CHAR(100)) </SQL><!-- 在SYSTEM库上的SYSDBA模式上建测试表 -->
		<SQL> CREATE VIEW DML_20010_VIEW1 AS SELECT * FROM DML_20010_TABLE WHERE C0=2</SQL><!-- 在SYSTEM库上的SYSDBA模式上建测试视图 -->
		<SQL> CREATE VIEW DML_20010_VIEW2 AS SELECT * FROM DML_20010_TABLE WHERE C0=1 WITH CHECK OPTION</SQL><!-- 在SYSTEM库上的SYSDBA模式上建测试视图(带CHECK约束) -->
	</SQL_CASE>
	<TestPointBegin>测试点1：开始 </TestPointBegin>
	<!-- 删除表中全部数据 -->
	<SQL_CASE>
		<SQL> INSERT INTO DML_20010_TABLE VALUES(1, 'ABCDEFGHIJKMN') </SQL><!-- 插入行测试数据 -->
		<SQL> INSERT INTO DML_20010_TABLE VALUES(2, 'ABCDEFGHIJKMN') </SQL><!-- 插入行测试数据 -->
		<SQL> INSERT INTO DML_20010_TABLE SELECT * FROM DML_20010_TABLE </SQL>
		<SQL> INSERT INTO DML_20010_TABLE SELECT * FROM DML_20010_TABLE </SQL>
		
		<SQL> DELETE FROM DML_20010_TABLE </SQL>
		<!-- 验证结果，SYSTEM库上的测试表应该返回一个结果集 -->
		<TYPE> DIRECT_EXECUTE_SELECT_COMPARE_RESULT </TYPE><!-- 预期执行成功，并返回一个结果集，只验证给定值的长度 -->
		<SQL> SELECT * FROM DML_20010_TABLE </SQL>
		<RESULT>
		</RESULT>
	</SQL_CASE>
	<!-- - - - - - - - - - - - 测试点1：结束 - - - - - - - - - - - -->

