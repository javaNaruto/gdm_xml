<SQLTEST>
	<CONTENT> 被更新列值的表达式表示</CONTENT><!-- 请在这里加入对脚本的简要描述 -->
	<CONNECT></CONNECT><!-- 连接数据库 -->
	<SQL_CASE>
		<SQL> CREATE TABLE DML_30015_TABLE(C0 INT, C1 VARCHAR(100)) </SQL>
		<SQL> INSERT INTO DML_30015_TABLE VALUES(1, &apos;ABCDEFG &apos;) </SQL>
		<SQL> INSERT INTO DML_30015_TABLE VALUES(3, &apos;ABCDEFG &apos;) </SQL>

		<SQL> CREATE OR REPLACE FUNCTION DML_30015_FUN1 RETURN INT 
			AS 
			S1 INT; 
			BEGIN 
			S1:=2147483647;
			RETURN S1; 
			END; </SQL>
		<SQL> CREATE OR REPLACE FUNCTION DML_30015_FUN2 RETURN VARCHAR(100) 
			AS 
			S1 VARCHAR(100); 
			BEGIN 
			S1:='ABCDEFG'; 
			RETURN S1; 
			END; </SQL>
	</SQL_CASE>
	<TestPointBegin>测试点1：开始 </TestPointBegin>
